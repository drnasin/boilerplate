{
    "name": "drnasin/boilerplate",
    "description": "My personal boilerplate and directory structure",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Ante Drnasin",
            "email": "ante@caan.si"
        }
    ],
    "require": {
      "php" : ">= 7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src/App"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "tests/src/App"
        }
    },
    "scripts": {
        "test": "php bin/phpunit.phar -c tests/phpunit.xml"
    }
}
